<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
  window.onload = function() {
    console.log("haris");
    setTimeout(function() {
      document.getElementById("polje").scrollIntoView();
    }, 1000);

  };

  var socket = io.connect('ws://localhost:3000');
  socket.emit('Joino se klijent',"<%=imee%>");
  socket.on('USAO_U_RAZGOVOR',function (poruka){
    var nova = document.createElement('div');
    nova.setAttribute('class','alert alert-success rok');
    nova.setAttribute('style','background-color:aquamarine');
    if (poruka === "Pridru≈æili ste se chatu") {
      nova.innerHTML = poruka;
    } else {
      nova.innerHTML = poruka + " se pridruzio chatu";
    }
    var glavna =  document.getElementById('poruke');
    glavna.appendChild(nova)


  });
  socket.on('IZASAO_IZ_RAZGOVORA', function (ime) {
    var nova = document.createElement('div');
    nova.setAttribute('class', 'alert alert-danger rok');
    nova.setAttribute('style', 'background-color:lightcoral');
    nova.innerHTML = ime + " je napustio/la razgovor"; // Prikazuje poruku da je korisnik napustio razgovor
    var glavna = document.getElementById('poruke');
    glavna.appendChild(nova);

  });
  socket.on('Online korisnici', function (korisnici) {
    console.log(korisnici);

    korisnici.forEach(function (korisnik) {
      if (korisnik !== '<%=imee%>') { // Prikazujte samo ostale korisnike, ne i trenutnog korisnika (samog sebe)
        var korisnikElement = document.getElementById("submenu1");
        var nova = document.createElement('li');
        nova.innerHTML = korisnik;
        korisnikElement.appendChild(nova);
      }
    });
  });
</script>
